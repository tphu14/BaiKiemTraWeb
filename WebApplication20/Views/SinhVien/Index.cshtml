@model IEnumerable<WebApplication20.Models.SinhVien>

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3><i class="bi bi-people-fill"></i> Danh Sách Sinh Viên</h3>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-person-plus"></i> Thêm Sinh Viên
            </a>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Mã SV</th>
                            <th>Họ Tên</th>
                            <th>Giới Tính</th>
                            <th>Ngày Sinh</th>
                            <th>Ngành Học</th>
                            <th class="text-center">Hình Ảnh</th>
                            <th class="text-center">Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MaSV</td>
                                <td>@item.HoTen</td>
                                <td>@item.GioiTinh</td>
                                <td>@item.NgaySinh.ToShortDateString()</td>
                                <td>@item.NganhHoc.TenNganh</td>
                                <td class="text-center">
                                    <img src="~/@item.Hinh" alt="Ảnh sinh viên" class="rounded-circle shadow" style="width: 80px; height: 80px; object-fit: cover;" />
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.MaSV" class="btn btn-info btn-sm me-1">
                                        <i class="bi bi-eye"></i> Chi tiết
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.MaSV" class="btn btn-warning btn-sm me-1">
                                        <i class="bi bi-pencil-square"></i> Chỉnh sửa
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaSV" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa sinh viên này?');">
                                        <i class="bi bi-trash"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Thêm Bootstrap và Bootstrap Icons -->
@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet" />
}
