@model WebApplication20.Models.SinhVien

@{
    ViewData["Title"] = "Xóa Sinh Viên";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white text-center">
            <h3><i class="bi bi-exclamation-triangle-fill"></i> Xác Nhận Xóa Sinh Viên</h3>
        </div>

        <div class="card-body">
            <h5 class="text-center mb-4">Bạn có chắc chắn muốn xóa sinh viên này không?</h5>

            <div class="row mb-3">
                <div class="col-md-4 text-center">
                    <img src="~/@Model.Hinh" alt="Ảnh sinh viên" class="rounded-circle img-thumbnail" style="width: 150px; height: 150px;" />
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4"><i class="bi bi-card-list"></i> Mã Sinh Viên:</dt>
                        <dd class="col-sm-8"><span class="badge bg-primary">@Model.MaSV</span></dd>

                        <dt class="col-sm-4"><i class="bi bi-person"></i> Họ Tên:</dt>
                        <dd class="col-sm-8">@Model.HoTen</dd>
                    </dl>
                </div>
            </div>

            <!-- Form xác nhận xóa -->
            <form asp-action="Delete" method="post" class="text-center">
                <input type="hidden" name="id" value="@Model.MaSV" />
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="bi bi-trash-fill"></i> Xác Nhận Xóa
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="bi bi-arrow-left-circle"></i> Hủy
                </a>
            </form>
        </div>
    </div>
</div>

<!-- Thêm Bootstrap Icons và Bootstrap 5 -->
@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet" />
}
